<div class="col-md-12">
  <h2 class="text-center"> 我发表过的文章 </h2>
  <table class="table">
    <thead>
    <tr>
      <th> Content </th>
      <th> Group Name </th>
      <th> Last Update </th>
      <th colspan="2"></th>
    </tr>
    </thead>
    <tbody>
    <% @blogs.each do |blog| %>
        <tr>
          <td> <%= blog.content %> </td>
          <td> <%= blog.group.title %> </td>
          <td> <%= blog.updated_at %> </td>
        </tr>
    <% end %>
    </tbody>
  </table>
</div>